{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{posts.id}}" readonly>
                <!-- {{posts.id}} : 머스테치는 객체의 필드 접근 시 점으로 구분 한다
                    즉,Posts 클래스의 id에 대한 접근은 posts.id로 할 수 있다. -->
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{posts.title}}">
            </div>
            <div class="form-group">
                <label for="author"> 작성자 </label>
                <input type="text" class="form-control" id="author" value="{{posts.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="content">{{posts.content}}"></textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btb btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btb btn-danger" id="btn-delete">삭제</button>

    </div>
</div>

{{>layout/footer}}
